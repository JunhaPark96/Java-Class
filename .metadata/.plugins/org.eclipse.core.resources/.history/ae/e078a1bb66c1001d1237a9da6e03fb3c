package daySixth.Game;

import java.util.*;

public class Cleric {
    String name;
    int hp = 50;
    int mp = 10;
    final int MAXHP = 50;
    final int MAXMP = 10;
    Random random = new Random();


    void selfAid() {
        this.mp -= 5;
        this.hp = MAXHP;
    }

    int pray(int sec) {
        int prayedMp = sec + random.nextInt(3);
        this.mp += prayedMp;
        if (this.mp > MAXMP) {
            this.mp = MAXMP;
        }
        if (this.mp + prayedMp > MAXMP) {
            prayedMp = ;
        }
        // 10 = 5 + 6   -> 5
        return prayedMp;
    }
}
