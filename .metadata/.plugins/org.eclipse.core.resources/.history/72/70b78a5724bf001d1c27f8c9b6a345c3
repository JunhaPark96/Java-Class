package cnt;

import java.util.*;

public class Cnt3 {

    public static void main(String[] args) {
        // TODO Auto-generated method stub
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        int cnt2 = 0;
        int cnt3 = 0;
        int cnt12 = 0;
        
        for (int i = 1; i < n; i++;) {
            if (i % 12 == 0) {
                cnt12++;
            } else if (i % 3 == 0) {
                cnt3++;
            } else {
                cnt2++;
            }
        }
        System.out.println(cnt2 + " " + cnt3 + " " + cnt);
    }

}
