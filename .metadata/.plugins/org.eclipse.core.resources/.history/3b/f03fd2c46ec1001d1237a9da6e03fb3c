package daySixth.Game;

import java.util.*;

public class Cleric {
    String name;
    int hp = 50;
    int mp = 10;
    final int MAX_HP = 50;
    final int MAX_MP = 10;
    Random random = new Random();


    void selfAid() {
        this.mp -= 5;
        this.hp = MAX_HP;
    }
    // 1 1~3 2 2~4 3 3~5 4 4~6
    int pray(int sec) {
        int prayedMp = sec + random.nextInt(3);
        if (sec == 0) {
            prayedMp = 0;
        }
        if (this.mp + prayedMp > MAX_MP) {
            prayedMp = MAX_MP - this.mp;
            this.mp = MAX_MP;
        } else {
            this.mp += prayedMp;            
        }
        return prayedMp;
    }
}
